<config>
	<modules>
		<Luigifab_Maillog>
			<version>3.0.0</version>
		</Luigifab_Maillog>
	</modules>
	<global>
		<blocks>
			<maillog>
				<class>Luigifab_Maillog_Block</class>
			</maillog>
		</blocks>
		<helpers>
			<maillog>
				<class>Luigifab_Maillog_Helper</class>
			</maillog>
		</helpers>
		<models>
			<maillog>
				<class>Luigifab_Maillog_Model</class>
				<resourceModel>maillog_resource</resourceModel>
			</maillog>
			<core>
				<rewrite>
					<email_queue>Luigifab_Maillog_Model_Rewrite_Queue</email_queue><!-- Magento 1.9.1.0 et + -->
				</rewrite>
			</core>
			<maillog_resource>
				<class>Luigifab_Maillog_Model_Resource</class>
				<entities>
					<email>
						<table>luigifab_maillog</table>
					</email>
					<bounce>
						<table>luigifab_maillog_bounce</table>
					</bounce>
					<sync>
						<table>luigifab_maillog_sync</table>
					</sync>
				</entities>
			</maillog_resource>
		</models>
		<resources>
			<maillog_setup>
				<setup>
					<module>Luigifab_Maillog</module>
					<class>Mage_Core_Model_Resource_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</maillog_setup>
			<maillog_write>
				<connection>
					<use>core_write</use>
				</connection>
			</maillog_write>
			<maillog_read>
				<connection>
					<use>core_read</use>
				</connection>
			</maillog_read>
		</resources>
		<template>
			<email>
				<maillog_email_template translate="label">
					<label>Sent email report</label>
					<file>maillog_report.html</file>
					<type>html</type>
				</maillog_email_template>
			</email>
		</template>
		<events>
			<customer_save_commit_after>
				<observers>
					<maillog_customer_save>
						<class>maillog/observer</class>
						<method>customerSaveSync</method>
					</maillog_customer_save>
				</observers>
			</customer_save_commit_after>
			<customer_delete_after>
				<observers>
					<maillog_customer_delete>
						<class>maillog/observer</class>
						<method>customerDeleteSync</method>
					</maillog_customer_delete>
				</observers>
			</customer_delete_after>
			<newsletter_subscriber_save_after>
				<observers>
					<maillog_subscriber_save>
						<class>maillog/observer</class>
						<method>subscriberSaveSync</method>
					</maillog_subscriber_save>
				</observers>
			</newsletter_subscriber_save_after>
			<newsletter_subscriber_delete_after>
				<observers>
					<maillog_subscriber_delete>
						<class>maillog/observer</class>
						<method>subscriberDeleteSync</method>
					</maillog_subscriber_delete>
				</observers>
			</newsletter_subscriber_delete_after>
			<sales_order_invoice_save_commit_after>
				<observers>
					<maillog_order_invoice>
						<class>maillog/observer</class>
						<method>orderInvoiceSync</method>
					</maillog_order_invoice>
				</observers>
			</sales_order_invoice_save_commit_after>
		</events>
	</global>
	<frontend>
		<events>
			<customer_login>
				<observers>
					<maillog_customer_login>
						<class>maillog/observer</class>
						<method>customerLoginSync</method>
					</maillog_customer_login>
				</observers>
			</customer_login>
			<customer_address_save_after>
				<observers>
					<maillog_address_save>
						<class>maillog/observer</class>
						<method>addressSaveSync</method>
					</maillog_address_save>
				</observers>
			</customer_address_save_after>
		</events>
		<routers>
			<maillog>
				<use>standard</use>
				<args>
					<module>Luigifab_Maillog</module>
					<frontName>maillog</frontName>
				</args>
			</maillog>
		</routers>
	</frontend>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<luigifab_maillog before="Mage_Adminhtml">Luigifab_Maillog</luigifab_maillog>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<events>
			<admin_system_config_changed_section_maillog>
				<observers>
					<maillog>
						<class>maillog/observer</class>
						<method>updateConfig</method>
					</maillog>
				</observers>
			</admin_system_config_changed_section_maillog>
			<adminhtml_customer_prepare_save><!-- storeId -->
				<observers>
					<maillog_customer_storeid>
						<class>maillog/observer</class>
						<method>setCustomerStoreId</method>
					</maillog_customer_storeid>
				</observers>
			</adminhtml_customer_prepare_save>
			<newsletter_subscriber_save_before><!-- storeId -->
				<observers>
					<maillog_subscriber_storeid>
						<class>maillog/observer</class>
						<method>setSubscriberStoreId</method>
					</maillog_subscriber_storeid>
				</observers>
			</newsletter_subscriber_save_before>
		</events>
		<layout>
			<updates>
				<maillog>
					<file>luigifab/maillog.xml</file>
				</maillog>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Maillog>
					<files>
						<default>Luigifab_Maillog.csv</default>
					</files>
				</Luigifab_Maillog>
			</modules>
		</translate>
	</adminhtml>
	<crontab>
		<jobs>
			<maillog_send_report>
				<run>
					<model>maillog/observer::sendEmailReport</model>
				</run>
			</maillog_send_report>
			<maillog_bounces_import>
				<run>
					<model>maillog/observer::bouncesFileImport</model>
				</run>
			</maillog_bounces_import>
			<maillog_unsubscribers_import>
				<run>
					<model>maillog/observer::unsubscribersFileImport</model>
				</run>
			</maillog_unsubscribers_import>
		</jobs>
	</crontab>
	<default>
		<maillog>
			<general>
				<send>1</send>
				<subject>1</subject>
				<created>1</created>
			</general>
			<email>
				<enabled>0</enabled>
				<recipient_email>hello@example.org</recipient_email>
				<sender_email_identity>general</sender_email_identity>
				<template>maillog_email_template</template>
			</email>
			<bounces>
				<cron_expr>30 2 * * *</cron_expr>
			</bounces>
			<unsubscribers>
				<cron_expr>30 2 * * *</cron_expr>
			</unsubscribers>
		</maillog>
	</default>
</config>