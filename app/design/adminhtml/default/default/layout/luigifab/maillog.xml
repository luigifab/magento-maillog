<layout version="0.1.0">
	<adminhtml_system_config_edit>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/maillog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
	</adminhtml_system_config_edit>

	<adminhtml_customer_edit>
		<reference name="head">
			<action method="addItem" ifconfig="maillog/general/enabled">
				<type>skin_css</type>
				<name>css/luigifab/maillog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="customer_edit_tabs">
			<action method="addTab" ifconfig="maillog/general/enabled">
				<name>maillog_grid_customer</name>
				<block>maillog/adminhtml_history_tab</block>
			</action>
		</reference>
	</adminhtml_customer_edit>

	<adminhtml_sales_order_view>
		<reference name="head">
			<action method="addItem" ifconfig="maillog/general/enabled">
				<type>skin_css</type>
				<name>css/luigifab/maillog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="sales_order_tabs">
			<action method="addTab" ifconfig="maillog/general/enabled">
				<name>maillog_grid_order</name>
				<block>maillog/adminhtml_history_tab</block>
			</action>
		</reference>
	</adminhtml_sales_order_view>

	<adminhtml_maillog_history_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Transactionnal emails / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/maillog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="content">
			<block type="maillog/adminhtml_history" name="maillog_history" />
		</reference>
	</adminhtml_maillog_history_index>

	<adminhtml_maillog_history_view>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Transactionnal emails / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/maillog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="content">
			<block type="maillog/adminhtml_history_view" name="maillog_history_view" />
		</reference>
	</adminhtml_maillog_history_view>
</layout>